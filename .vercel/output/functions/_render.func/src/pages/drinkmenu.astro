---
import Layout from '../layouts/Layout.astro';
import CardDrink from '../components/CardDrink.astro';
import Navigation from '../components/Navigation.astro';
import { getCollection } from 'astro:content';

const drink = await getCollection('drink');
---

<Layout title="Gallo Negro">
	<nav class="sticky top-0 z-50 bg-gray-900 shadow-xl ">
		<section class="grid justify-items-center p-4">
			<Navigation />
		</section>
	</nav>
	
	<section class="bg-gray-900 pb-10">
		<div class="px-4">

			<span class="flex items-center p-6">
				<span class="h-px flex-1 bg-white"></span>
				<h2 class="text-2xl uppercase mx-2 text-white">Cervezas</h2>
				<span class="h-px flex-1 bg-white"></span>
			</span>

			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-2">
				{
					drink.map((work: { slug: any; data: any; }) => {
						const { slug, data } = work
						const { title, price, type} = data
						if (type == 'cerveza') {
							const card = <CardDrink title={title} price={price}/>;
							return (card)
						}
					})
				}
			</div>

			<span class="flex items-center p-6">
				<span class="h-px flex-1 bg-white"></span>
				<h2 class="text-2xl uppercase mx-2 text-white">Refrescos</h2>
				<span class="h-px flex-1 bg-white"></span>
			</span>

			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-2">
				{
					drink.map((work: { slug: any; data: any; }) => {
						const { slug, data } = work
						const { title, price, type} = data
						if (type == 'refresco') {
							const card = <CardDrink title={title} price={price}/>;
							return (card)
						}
					})
				}
			</div>

			<span class="flex items-center p-6">
				<span class="h-px flex-1 bg-white"></span>
				<h2 class="text-2xl uppercase mx-2 text-white">Vinos y Vermut</h2>
				<span class="h-px flex-1 bg-white"></span>
			</span>

			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-2">
				{
					drink.map((work: { slug: any; data: any; }) => {
						const { slug, data } = work
						const { title, price, type} = data
						if (type == 'vinos') {
							const card = <CardDrink title={title} price={price}/>;
							return (card)
						}
					})
				}
			</div>


		</div>
	</section>
	<section>
		<div class="grid content-center justify-center bg-gray-900 pb-10">
			<img src="/redbullbanner.jpg" alt="">
		</div>
	</section>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
